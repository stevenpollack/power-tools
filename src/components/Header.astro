---
import { Info, Wrench, Sticker, Users } from "lucide-react";
import FunningsLogo from "@/images/logos/funnings.svg";
import { Picture } from "astro:assets";
---

<header
  class="bg-bunnings-secondary-green font-bunnings-heading text-white shadow-lg"
>
  <div class="mx-auto max-w-7xl px-4">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="block">
          <Picture
            src={FunningsLogo}
            alt="🖋️✖️🛠️"
            width={120}
            height={120}
            class="h-12 w-auto"
          />
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden items-center space-x-8 md:flex">
        <a
          href="/tools/v2"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-2 rounded-md px-3 py-2 font-medium text-white transition-colors duration-200 hover:text-black"
        >
          <Wrench className="h-5 w-5" />
          <span>Tools</span>
        </a>
        <a
          href="/authors/v2"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-2 rounded-md px-3 py-2 font-medium text-white transition-colors duration-200 hover:text-black"
        >
          <Users className="h-5 w-5" />
          <span>Authors</span>
        </a>
        <a
          href="/cartoons"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-2 rounded-md px-3 py-2 font-medium text-white transition-colors duration-200 hover:text-black"
        >
          <Sticker className="h-5 w-5" />
          <span>Cartoons</span>
        </a>
        <a
          href="/about"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-2 rounded-md px-3 py-2 font-medium text-white transition-colors duration-200 hover:text-black"
        >
          <Info className="h-5 w-5" />
          <span>About</span>
        </a>
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="hover:bg-bunnings-primary-orange rounded-md p-2 text-white transition-colors duration-200 hover:text-black"
          aria-label="Open menu"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden pb-4 md:hidden">
      <div class="space-y-2">
        <a
          href="/tools/v2"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-3 rounded-md px-3 py-2 text-white transition-colors duration-200 hover:text-black"
        >
          <Wrench className="h-5 w-5" />
          <span>Tools</span>
        </a>
        <a
          href="/authors/v2"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-3 rounded-md px-3 py-2 text-white transition-colors duration-200 hover:text-black"
        >
          <Users className="h-5 w-5" />
          <span>Authors</span>
        </a>
        <a
          href="/cartoons"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-3 rounded-md px-3 py-2 text-white transition-colors duration-200 hover:text-black"
        >
          <Sticker className="h-5 w-5" />
          <span>Cartoons</span>
        </a>
        <a
          href="/about"
          class="hover:bg-bunnings-primary-orange flex items-center space-x-3 rounded-md px-3 py-2 text-white transition-colors duration-200 hover:text-black"
        >
          <Info className="h-5 w-5" />
          <span>About</span>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
