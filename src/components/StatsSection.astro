---
export interface Props {
  authorCount?: number;
  toolCount?: number;
  reviewCount: number;
  movementCount?: number;
  brandCount?: number;
}

const { authorCount, toolCount, reviewCount, movementCount, brandCount } =
  Astro.props;

// Determine if this is for authors or tools page
const isAuthorsPage = authorCount !== undefined;
const firstStat = isAuthorsPage ? authorCount : toolCount;
const firstLabel = isAuthorsPage ? "Literary Masters" : "Professional Tools";
const thirdStat = isAuthorsPage ? movementCount : brandCount;
const thirdLabel = isAuthorsPage ? "Literary Movements" : "Top Brands";
---

<!-- TODO: refactor this using slots -->
<section class="mt-16 rounded-2xl bg-white p-8 shadow-lg">
  <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
    <div class="text-center">
      <div class="text-4xl font-bold text-blue-600">{firstStat}+</div>
      <div class="text-gray-600">{firstLabel}</div>
    </div>
    <div class="text-center">
      <div class="text-4xl font-bold text-green-600">
        {reviewCount.toLocaleString()}+
      </div>
      <div class="text-gray-600">Total Reviews</div>
    </div>
    <div class="text-center">
      <div class="text-4xl font-bold text-orange-600">{thirdStat}</div>
      <div class="text-gray-600">{thirdLabel}</div>
    </div>
  </div>
</section>
