---
import Layout from "../../layouts/ReviewLayout.astro";
import { getCollection } from "astro:content";
import ToolImage from "../../components/ToolImage.astro";

export async function getStaticPaths() {
  const tools = await getCollection("tools");

  return tools.map((tool) => ({
    params: { id: tool.id },
    props: { tool },
  }));
}

const { tool } = Astro.props;

const reviews = (await getCollection("reviews")).filter(
  (review) => review.data.tool.id === tool.id
);

console.log(reviews);

const { name, brand, image, specifications, pricing } = tool.data;
---

<Layout title="Tool Details - Power Tools Reviews">
  <main class="tool-profile">
    <div class="container">
      <div class="tool-header">
        <div class="tool-image">
          <img src={tool.data.thumbnailUrl ?? ""} alt={name} />
        </div>

        <div class="tool-info">
          <h1>{name}</h1>
          <p class="tool-brand">{brand}</p>
          <div class="tool-specs">
            <h3>Specifications</h3>
            <p>Tool specifications will be loaded from Stream 2 data</p>
          </div>
          <div class="tool-pricing">
            <span class="price">$XXX.XX</span>
            <a href="#" class="home-depot-link">View on Home Depot</a>
          </div>
        </div>
      </div>

      <section class="tool-reviews">
        <h2>Literary Reviews of This Tool</h2>
        <div class="reviews-grid">
          <ul>
            {
              reviews &&
                reviews.map((review) => (
                  <li>
                    <a href={`/review/${review.id}`}>{review.id}</a>
                  </li>
                ))
            }
          </ul>
          {
            reviews.length === 0 && (
              <p class="placeholder">
                Author reviews of this tool will be displayed here after content
                generation
              </p>
            )
          }
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .tool-profile {
    padding: 2rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .tool-header {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
    align-items: start;
  }

  .tool-image {
    width: 300px;
    height: 300px;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    text-align: center;
    font-size: 1.125rem;
  }

  .tool-info h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

  .tool-brand {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .tool-specs {
    margin-bottom: 2rem;
  }

  .tool-specs h3 {
    font-size: 1.375rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .tool-specs p {
    line-height: 1.8;
    color: var(--color-text);
  }

  .tool-pricing {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .price {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .home-depot-link {
    background: #f97316;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.2s ease;
  }

  .home-depot-link:hover {
    background: #ea580c;
  }

  .tool-reviews {
    border-top: 2px solid #f3f4f6;
    padding-top: 2rem;
  }

  .tool-reviews h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: var(--color-primary);
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .placeholder {
    grid-column: 1 / -1;
    text-align: center;
    color: var(--color-text-light);
    font-style: italic;
    padding: 2rem;
  }

  @media (max-width: 768px) {
    .tool-header {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .tool-image {
      width: 250px;
      height: 250px;
      margin: 0 auto;
    }

    .tool-info h1 {
      font-size: 2rem;
    }

    .tool-pricing {
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>
