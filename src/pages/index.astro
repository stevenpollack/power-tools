---
import CardWall from "../components/CardWall.astro";
import Layout from "../layouts/ReviewLayout.astro";
---

<Layout title="Power Tools Reviews - When Literature Meets Hardware">
  <main>
    <header class="hero-section">
      <h1>Power Tools Reviews</h1>
      <p class="tagline">When Great Authors Meet Great Tools</p>
      <p class="subtitle">
        Discover what happens when literary masters review power tools
      </p>
    </header>

    <CardWall />
  </main>
</Layout>

<style>
  .hero-section {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    color: white;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .tagline {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    opacity: 0.9;
  }

  .subtitle {
    font-size: 1.125rem;
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1.25rem;
    }

    .hero-section {
      padding: 2rem 1rem;
    }
  }
</style>

