---
import { getCollection } from "astro:content";
import CartoonCard from "../components/CartoonCard.astro";
import Layout from "@/layouts/ReviewLayout.astro";

const cartoons = await getCollection("cartoons");
---

<Layout title="Cartoons">
  <section class="section mt-4 scroll-mt-4">
    <h1 class="mx-auto mb-2 px-4 text-2xl font-bold">AI-Generated Cartoons</h1>
    <p class="mx-auto mb-4 px-4 text-sm">
      The following images were returned by Gemini-2.5-Pro.<br /> Prompts are provided
      in the captions:
    </p>
    <div
      class="justify-items-left mx-auto grid grid-cols-1 gap-4 px-4 md:grid-cols-2 lg:grid-cols-3"
    >
      {cartoons.map((cartoon) => <CartoonCard cartoon={cartoon} />)}
    </div>
  </section>
</Layout>
